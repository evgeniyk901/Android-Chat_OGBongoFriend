<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/new_bg" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <Button
            android:id="@+id/step"
            android:layout_width="130dp"
            android:layout_height="55dp"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/regstep"
            android:text="Step-2"
           
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/register_L_R_margin"
            android:layout_marginRight="30dp"
            android:layout_marginTop="@dimen/margin_bw_editText"
            android:layout_weight="1"
            android:scrollbars="none" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp" >

                <RelativeLayout
                    android:id="@+id/first_part"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="visible" >

                    <EditText
                        android:id="@+id/username"
                        android:layout_width="fill_parent"
                        android:layout_height="55dp"
                        android:background="@drawable/layout_corners"
                        android:hint="Name"
                        android:textSize="25sp"
                        android:paddingLeft="10dp"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="fill_parent"
                        android:layout_height="55dp"
                        android:layout_below="@+id/username"
                        android:layout_marginTop="@dimen/margin_bw_editText"
                        android:background="@drawable/layout_corners"
                        android:hint="Telephone Number"
                        android:inputType="phone"
                        android:maxLength="14"
                        android:textSize="25sp"
                        android:paddingLeft="10dp"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/email_id"
                        android:layout_width="fill_parent"
                        android:layout_height="55dp"
                        android:layout_below="@+id/phone"
                        android:layout_marginTop="@dimen/margin_bw_editText"
                        android:background="@drawable/layout_corners"
                        android:hint="Email"
                        android:textSize="25sp"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/con_email_id"
                        android:layout_width="fill_parent"
                        android:layout_height="55dp"
                        android:layout_below="@+id/email_id"
                        android:layout_marginTop="@dimen/margin_bw_editText"
                        android:background="@drawable/layout_corners"
                        android:hint="Confirm Email"
                        android:inputType="textEmailAddress"
                        android:textSize="25sp"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="fill_parent"
                        android:layout_height="55dp"
                        android:layout_below="@+id/con_email_id"
                        android:layout_marginTop="@dimen/margin_bw_editText"
                        android:background="@drawable/layout_corners"
                        android:hint="Password"
                        android:textSize="25sp"
                        android:inputType="textPassword"
                        android:paddingLeft="10dp"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/confirm_password"
                        android:layout_width="fill_parent"
                        android:layout_height="55dp"
                        android:layout_below="@+id/password"
                        android:layout_marginTop="@dimen/margin_bw_editText"
                        android:background="@drawable/layout_corners"
                        android:hint="Confirm Password"
                        android:textSize="25dp"
                        android:inputType="textPassword"
                        android:paddingLeft="5dp"
                        android:visibility="gone" />

                    <EditText
                        android:id="@+id/dob"
                        android:layout_width="fill_parent"
                        android:layout_height="55dp"
                        android:layout_below="@+id/gender_spinner"
                        android:layout_marginTop="@dimen/margin_bw_editText"
                        android:background="@drawable/layout_corners"
                        android:editable="false"
                        android:textSize="25sp"
                        android:hint="Date Of Birth"
                        android:inputType="text"
                        android:paddingLeft="5dp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="fill_parent"
                        android:layout_height="55dp"
                        android:layout_alignTop="@+id/dob"
                        android:layout_below="@+id/gender_spinner"
                        android:textSize="30sp"
                        android:paddingLeft="10dp"
                        android:visibility="gone" />

                    <CheckBox
                        android:id="@+id/terms_condition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/dob"
                        android:layout_marginTop="20dp"
                        android:textColor="#000000"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/term_condition_link"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dob"
                        android:layout_marginTop="20dp"
                        android:textSize="25sp"
                        android:layout_toRightOf="@+id/terms_condition"
                        android:layout_marginLeft="5dp"
                        android:text="I accept Terms &amp; Conditions"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/blue"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/gender_spinner"
                        android:layout_width="fill_parent"
                        android:layout_height="55dp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="@dimen/margin_bw_editText"
                        android:layout_below="@+id/confirm_password"
                        android:background="@drawable/rounded_edge_with_whitebg"
                        android:focusableInTouchMode="true"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="30dp"
                            android:text="Gender"
                            android:textSize="25sp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/black" />

                        <ImageView
                            android:id="@+id/radio_men1"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/radio_selected" />

                        <ImageView
                            android:id="@+id/men1"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:src="@drawable/male" />

                        <ImageView
                            android:id="@+id/radio_women1"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="30dp"
                            android:src="@drawable/radio_unselected" />

                        <ImageView
                            android:id="@+id/women1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/female" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/personal_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/gender_spinner"
                        android:layout_marginTop="1dp"
                        android:orientation="vertical"
                        android:visibility="visible"
                        android:padding="5dp" >

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Appearance"
                            android:layout_marginTop="10dp"
                            android:textSize="25sp"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                           android:padding="5dp"
                             android:background="@drawable/edit_text_bc"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Height"
                                android:textSize="25sp"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/black"
                                android:visibility="gone" />

                            <Spinner
                                android:id="@+id/height_list"
                                android:layout_width="fill_parent"
                                android:layout_height="60dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:padding="5dp"
                             android:background="@drawable/edit_text_bc"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Weight"
                                android:visibility="gone"
                                android:textSize="25sp"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/black" />

                            <Spinner
                                android:id="@+id/weight_list"
                                android:layout_width="fill_parent"
                                android:layout_height="60dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                             android:padding="5dp"
                             android:background="@drawable/edit_text_bc"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Body Type"
                                android:textSize="25sp"
                                android:visibility="gone"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/black" />

                            <Spinner
                                android:id="@+id/bodytype_list"
                                android:layout_width="fill_parent"
                                android:layout_height="60dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lookingfor_parent"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/personal_info"
                        android:layout_marginTop="1dp"
                        android:orientation="vertical"
                        android:visibility="visible"
                        android:padding="5dp" >

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="25sp"
                            android:text="Looking For"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/black" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                             android:background="@drawable/edit_text_bc"
                            android:padding="5dp" >

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp" >

                                <LinearLayout
                                    android:id="@+id/men_parent"
                                    android:layout_width="fill_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center" >

                                    <ImageView
                                        android:id="@+id/radio_men"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:src="@drawable/unselected_radio" />

                                    <ImageView
                                        android:id="@+id/men"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/male" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/women_parent"
                                    android:layout_width="fill_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center" >

                                    <ImageView
                                        android:id="@+id/radio_women"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginLeft="20dp"
                                        android:src="@drawable/unselected_radio" />

                                    <ImageView
                                        android:id="@+id/women"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:src="@drawable/female" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/both_parent"
                                    android:layout_width="fill_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center" >

                                    <ImageView
                                        android:id="@+id/radio_both"
                                        android:layout_width="25dp"
                                        android:layout_height="25dp"
                                        android:layout_marginLeft="20dp"
                                        android:src="@drawable/unselected_radio" />

                                    <ImageView
                                        android:id="@+id/bothmf"
                                        android:layout_width="50dp"
                                        android:layout_height="45dp"
                                        android:src="@drawable/malefelame" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/for_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lookingfor_parent"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_text_bc"
                        android:orientation="vertical"
                        android:visibility="visible"
                        android:padding="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="For"
                            android:visibility="gone"
                            android:textSize="25sp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/black" />

                        <Spinner
                            android:id="@+id/for_list"
                            android:layout_width="fill_parent"
                            android:layout_height="60dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/education_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/for_parent"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_text_bc"
                        android:orientation="vertical"
                        android:visibility="visible"
                        android:padding="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Education status"
                            android:visibility="gone"
                            android:textSize="25sp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/black" />

                        <Spinner
                            android:id="@+id/education_list"
                            android:layout_width="fill_parent"
                            android:layout_height="60dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/job_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/education_parent"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/edit_text_bc"
                        android:orientation="vertical"
                        android:visibility="visible"
                        android:padding="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Job status"
                            android:visibility="gone"
                            android:textSize="25sp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/black" />

                        <Spinner
                            android:id="@+id/job_list"
                            android:layout_width="fill_parent"
                            android:layout_height="60dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/star_club_parent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/job_parent"
                        android:layout_marginTop="5dp"
                        
                        android:orientation="vertical"
                        android:visibility="visible"
                        android:padding="5dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stars And Clubs"
                            android:layout_marginTop="10dp"
                            android:textSize="25sp"
                            android:textAppearance="?android:attr/textAppearanceMedium" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical" 
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edit_text_bc"
                                android:orientation="vertical" >

                                <Spinner
                                    android:id="@+id/stars_header1"
                                    android:layout_width="fill_parent"
                                    android:layout_height="60dp"
                                     />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                 android:background="@drawable/edit_text_bc"
                                android:orientation="vertical" >

                                <Spinner
                                    android:id="@+id/stars1"
                                    android:layout_width="fill_parent"
                                    android:layout_height="60dp"
                                    android:layout_marginTop="1dp"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                 android:layout_marginTop="1dp"
                                android:background="@drawable/edit_text_bc"
                                android:orientation="vertical" >

                                <Spinner
                                    android:id="@+id/stars_header2"
                                    android:layout_width="fill_parent"
                                    android:layout_height="60dp"
                                    android:layout_marginTop="1dp"
                                     />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                 android:layout_marginTop="1dp"
                                 android:background="@drawable/edit_text_bc"
                                android:orientation="vertical" >

                                <Spinner
                                    android:id="@+id/stars2"
                                    android:layout_width="fill_parent"
                                    android:layout_height="60dp"
                                    android:layout_marginTop="1dp"
                                    />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/star_club_parent"
                        android:layout_marginTop="1dp"
                        android:visibility="visible"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Country"
                                android:visibility="visible"
                                android:textSize="25sp"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                 android:background="@drawable/edit_text_bc"
                                android:orientation="vertical" 
                                android:visibility="visible">

                                <Spinner
                                    android:id="@+id/country_list"
                                    android:layout_width="fill_parent"
                                    android:layout_height="60dp"
                                    />

                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="20dp"
                            android:textSize="25sp"
                            android:text="State"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/black"
                            android:visibility="visible"
                            
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                   >

                                <Spinner
                                    android:id="@+id/state_list"
                                    android:layout_width="fill_parent"
                                    android:layout_height="60dp"
                                    android:background="@drawable/edit_text_bc"
                                   />

                            </LinearLayout>

                            <EditText
                                android:id="@+id/state_box"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                               android:padding="10dp"
                                android:background="@drawable/edit_text_bc"
                                android:ems="10" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="City"
                                android:textSize="25sp"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/black"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                    >

                                <Spinner
                                    android:id="@+id/city_list"
                                    android:layout_width="fill_parent"
                                    android:layout_height="60dp"
                                    android:background="@drawable/edit_text_bc"
                                  />

                            </LinearLayout>

                            <EditText
                                android:id="@+id/city_box"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:padding="3dp"
                                android:background="@drawable/edit_text_bc"
                                android:ems="10" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/second_part"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/first_part"
                    android:layout_weight="1"
                    android:visibility="gone" >

                    <LinearLayout
                        android:id="@+id/myhandle_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Handle"
                            android:textSize="25sp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/my_handle"
                            android:layout_width="fill_parent"
                            android:layout_height="60dp"
                            android:background="@drawable/edit_text_bc"
                            android:gravity="top"
                            android:padding="5dp" >

                            <requestFocus />
                        </EditText>

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Small Text"
                            android:visibility="gone"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/myself_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="About Myself"
                        android:textSize="25sp"
                        android:layout_below="@+id/myhandle_parent"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/myself_parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@+id/myself_text" >

                        <EditText
                            android:id="@+id/about_me"
                            android:layout_width="match_parent"
                            android:layout_height="180dp"
                            android:background="@drawable/edit_text_bc"
                            android:ems="10"
                            android:inputType="textMultiLine"
                            android:gravity="top"
                             android:maxLength="380"
                           
                            android:padding="5dp" />

                        <TextView
                            android:id="@+id/totalchar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200"
                            android:textSize="20sp"
                            android:textAppearance="?android:attr/textAppearanceSmall" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/upload_parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/myself_parent" >

                        <Button
                            android:id="@+id/chooseFile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:layout_marginTop="10dp"
                            android:textSize="25sp"
                            android:gravity="left|center_vertical"
