    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="35dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="fill_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:textSize="25sp"
             android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:text="Make sure you can remember your password, as you will need this to sign back in. "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/emailText"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/white"
            android:enabled="false"
            android:layout_marginTop="25dp"
            android:textSize="30sp"
            android:gravity="center"
            android:padding="10dp"
            android:text="yadav.arvind156#gmail.com"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/change_pass"
            android:layout_width="fill_parent"
            android:layout_marginTop="30dp"
             android:padding="10dp"
             android:background="@drawable/rounded_blue_btn"
             android:textSize="30dp"
             android:textColor="@color/white"
            android:layout_height="70dp"
            android:text="Change Password" />

        <Button
            android:id="@+id/sign_out"
             android:layout_width="fill_parent"
              android:padding="10dp"
            android:layout_marginTop="30dp"
            android:textSize="30sp"
            android:layout_height="70dp"
            android:textColor="@color/white"
            android:background="@drawable/rounded_blue_btn"
            android:text="Sign out" />
        
        
        <Button
            android:id="@+id/hideAccount"
             android:layout_width="fill_parent"
              android:padding="10dp"
            android:layout_marginTop="30dp"
            android:layout_height="70sp"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:background="@drawable/rounded_blue_btn"
            android:text="Hide Account" />

    </LinearLayout>

