<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
     >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:background="@color/white"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:padding="4dp" >

        <RelativeLayout
            android:id="@+id/userImageParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/userImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/profile" />

            <ProgressBar
                android:id="@+id/userImageProgress"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/userImageParent"
            android:text="TextView"
            android:textColor="@color/app_background_blue"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
          
            android:layout_height="wrap_content"
            android:layout_below="@+id/userName"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_toRightOf="@+id/userImageParent"
            android:text="location" />

        <TextView
            android:id="@+id/last_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/comment"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/userImageParent"
            android:text="last seen"
          	android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <LinearLayout
            android:id="@+id/gift_parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/userImageParent"
            android:orientation="vertical" >

            <Button
                android:id="@+id/accept_propose"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                    			android:layout_marginTop="5dp"
                    			android:layout_alignParentRight="true"
                     			android:gravity="center"
                     			    android:layout_marginRight="5dp"
                                android:textSize="10sp"
                               
                android:background="@drawable/close_event"
                android:padding="5dp"
                android:textColor="@color/white"
                android:text="Accept" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
android:background="@color/light_blue"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>