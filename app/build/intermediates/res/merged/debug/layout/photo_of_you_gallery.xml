<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="fill_parent" >

        <Gallery
            android:id="@+id/circle_gallery"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="2dp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="1"

                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:background="@drawable/rounded_green_btn"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:id="@+id/make_profile"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/make_profile_image"
                        android:textColor="@color/white"
                        android:singleLine="false"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/rating_parent"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1.2"
                    android:background="@drawable/rounded_edge_grey_bg"
                    android:gravity="center"
                    android:padding="5dp"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/rate1_img"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/no_rating" />

                    <ImageView
                        android:id="@+id/rate2_img"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:contentDescription="@null"
                        android:src="@drawable/no_rating" />

                    <ImageView
                        android:id="@+id/rate3_img"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:contentDescription="@null"
                        android:src="@drawable/no_rating" />

                    <ImageView
                        android:id="@+id/rate4_img"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:contentDescription="@null"
                        android:src="@drawable/no_rating" />

                    <ImageView
                        android:id="@+id/rate5_img"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:contentDescription="@null"
                        android:src="@drawable/no_rating" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_weight="1.1"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/rating_parent"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/rounded_edge_grey_bg">

                    <ImageView
                        android:id="@+id/camera_rate"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="3dp"
                        android:layout_weight="1"
                        android:contentDescription="@null"
                        android:src="@drawable/white_camera" />

                    <TextView
                        android:id="@+id/img_count"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"

                        android:textColor="@color/white"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/comment_parent"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.8"
                    android:background="@drawable/rounded_edge_grey_bg"
                    android:gravity="center"
                    android:visibility="gone" >

                    <TextView
                        android:id="@+id/comment_count"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center"

                        android:textColor="@color/white"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>